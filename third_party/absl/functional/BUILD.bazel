load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load(
    "//bazel/copts:configure_copts.bzl",
    "ONE_DEFAULT_COPTS",
    "ONE_DEFAULT_LINKOPTS",
    "ONE_TEST_COPTS",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])  # Apache 2.0

cc_library(
    name = "bind_front",
    srcs = ["internal/front_binder.h"],
    hdrs = ["bind_front.h"],
    copts = ONE_DEFAULT_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        "//third_party/absl/base:base_internal",
        "//third_party/absl/container:compressed_tuple",
        "//third_party/absl/meta:type_traits",
        "//third_party/absl/utility",
    ],
)

cc_test(
    name = "bind_front_test",
    srcs = ["bind_front_test.cc"],
    copts = ONE_TEST_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        ":bind_front",
        "//third_party/absl/memory",
        "//third_party/gtest:gtest_main",
    ],
)

cc_library(
    name = "function_ref",
    srcs = ["internal/function_ref.h"],
    hdrs = ["function_ref.h"],
    copts = ONE_DEFAULT_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        "//third_party/absl/base:base_internal",
        "//third_party/absl/meta:type_traits",
    ],
)

cc_test(
    name = "function_ref_test",
    size = "small",
    srcs = ["function_ref_test.cc"],
    copts = ONE_TEST_COPTS,
    deps = [
        ":function_ref",
        "//third_party/absl/container:test_instance_tracker",
        "//third_party/absl/memory",
        "//third_party/gtest:gtest_main",
    ],
)

cc_test(
    name = "function_ref_benchmark",
    srcs = [
        "function_ref_benchmark.cc",
    ],
    copts = ONE_TEST_COPTS,
    tags = ["benchmark"],
    visibility = ["//visibility:private"],
    deps = [
        ":function_ref",
        "//third_party/absl/base:core_headers",
        "@com_github_google_benchmark//:benchmark_main",
    ],
)
