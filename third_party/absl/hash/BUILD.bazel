load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load(
    "//bazel/copts:configure_copts.bzl",
    "ONE_DEFAULT_COPTS",
    "ONE_DEFAULT_LINKOPTS",
    "ONE_TEST_COPTS",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])  # Apache 2.0

cc_library(
    name = "hash",
    srcs = [
        "internal/hash.cc",
        "internal/hash.h",
    ],
    hdrs = ["hash.h"],
    copts = ONE_DEFAULT_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        ":city",
        "//third_party/absl/base:core_headers",
        "//third_party/absl/base:endian",
        "//third_party/absl/container:fixed_array",
        "//third_party/absl/meta:type_traits",
        "//third_party/absl/numeric:int128",
        "//third_party/absl/strings",
        "//third_party/absl/types:optional",
        "//third_party/absl/types:variant",
        "//third_party/absl/utility",
    ],
)

cc_library(
    name = "hash_testing",
    testonly = 1,
    hdrs = ["hash_testing.h"],
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        ":spy_hash_state",
        "//third_party/absl/meta:type_traits",
        "//third_party/absl/strings",
        "//third_party/absl/types:variant",
        "//third_party/gtest:gtest",
    ],
)

cc_test(
    name = "hash_test",
    srcs = ["hash_test.cc"],
    copts = ONE_TEST_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        ":hash",
        ":hash_testing",
        ":spy_hash_state",
        "//third_party/absl/base:core_headers",
        "//third_party/absl/container:flat_hash_set",
        "//third_party/absl/meta:type_traits",
        "//third_party/absl/numeric:int128",
        "//third_party/absl/strings:cord_test_helpers",
        "//third_party/gtest:gtest_main",
    ],
)

cc_library(
    name = "spy_hash_state",
    testonly = 1,
    hdrs = ["internal/spy_hash_state.h"],
    copts = ONE_DEFAULT_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    visibility = ["//visibility:private"],
    deps = [
        ":hash",
        "//third_party/absl/strings",
        "//third_party/absl/strings:str_format",
    ],
)

cc_library(
    name = "city",
    srcs = ["internal/city.cc"],
    hdrs = [
        "internal/city.h",
    ],
    copts = ONE_DEFAULT_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        "//third_party/absl/base:config",
        "//third_party/absl/base:core_headers",
        "//third_party/absl/base:endian",
    ],
)

cc_test(
    name = "city_test",
    srcs = ["internal/city_test.cc"],
    copts = ONE_TEST_COPTS,
    linkopts = ONE_DEFAULT_LINKOPTS,
    deps = [
        ":city",
        "//third_party/gtest:gtest_main",
    ],
)
